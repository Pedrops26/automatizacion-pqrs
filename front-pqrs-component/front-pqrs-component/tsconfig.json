{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Cambiado de "bundler" a "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom", "cypress"] // Añadido "cypress"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "cypress/**/*.ts"], // Añadido "cypress/**/*.ts"
  "exclude": ["node_modules"]
}
